<resources>

    <!-- Tema Dasar Aplikasi. -->
    <string name="appTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </string>

    <!-- Font default untuk item-item RecyclerView terlalu kecil.
    Marginnya adalah delimiter sederhana diantara kata-kata. -->

    <style name="word_title">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="background">@android:color/holo_orange_light</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <dimen name="big_padding">16dp</dimen>

</resources>